extends layout 

block content 

  h1 #{title}

  form(method='POST', action='')  
    label(for='firstName') First Name:
    input(type='text' id='firstName' name='firstName' value=(undefined === user ? '' : user.firstName))
    br

    label(for='lastName') Last Name:
    input(type='text' id='lastName' name='lastName' value=(undefined === user ? '' : user.lastName))
    br

    label(for='email') Email:
    input(type='email' id='email' name='email' value=(undefined === user ? '' : user.email))
    br

    label(for='password') Password:
    input(type='password' id='password' name='password')
    br

    button(type='submit') Sign Up

  if errors 
    ul 
      for error in errors 
        li!= error.msg